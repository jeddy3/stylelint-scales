{
  "name": "stylelint-scales",
  "description": "A Stylelint plugin pack to enforce numeric scales",
  "version": "3.1.1",
  "license": "MIT",
  "main": "lib/index.js",
  "files": [
    "lib",
    "!**/__tests__"
  ],
  "repository": "jeddy3/stylelint-scales",
  "keywords": [
    "stylelint",
    "stylelint-plugin",
    "spacing",
    "scales",
    "linting",
    "linter",
    "design-system",
    "type-scale"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "test": "jest",
    "check": "npm-run-all --parallel check:*",
    "check:js": "eslint \"**/*.js\"",
    "check:formating": "prettier \"**/*.{js,md,yml}\" --check",
    "fix": "npm-run-all --sequential fix:*",
    "fix:js": "eslint \"**/*.js\" --fix",
    "fix:formating": "prettier \"**/*.{js,md,yml}\" --write",
    "release": "np"
  },
  "dependencies": {
    "postcss-values-parser": "^6.0.2"
  },
  "devDependencies": {
    "common-tags": "^1.8.2",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "jest-preset-stylelint": "^6.3.2",
    "np": "^8.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "stylelint": "^15.11.0"
  }
}
